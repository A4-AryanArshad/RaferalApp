{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run Backend Server",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "dev"],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "skipFiles": ["<node_internals>/**"],
      "env": {
        "NODE_ENV": "development"
      }
    },
    {
      "name": "Debug Backend Server",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "ts-node-dev",
      "runtimeArgs": ["--respawn", "--transpile-only", "src/server.ts"],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "skipFiles": ["<node_internals>/**"],
      "env": {
        "NODE_ENV": "development"
      },
      "sourceMaps": true,
      "restart": true
    }
  ],
  "compounds": [
    {
      "name": "Start Backend & Expo (Both)",
      "configurations": ["Run Backend Server"],
      "preLaunchTask": "Start Expo App",
      "presentation": {
        "hidden": false,
        "group": "both",
        "order": 1
      }
    }
  ]
}
