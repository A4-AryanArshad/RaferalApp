{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Start Backend Server",
      "type": "npm",
      "script": "dev",
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "new",
        "focus": false,
        "clear": true,
        "group": "backend"
      },
      "runOptions": {
        "runOn": "default"
      }
    },
    {
      "label": "Start Expo App",
      "type": "shell",
      "command": "npx expo start --localhost",
      "options": {
        "cwd": "${workspaceFolder}/AirbnbReferralApp"
      },
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "new",
        "focus": false,
        "clear": true,
        "group": "mobile"
      },
      "runOptions": {
        "runOn": "default"
      }
    },
    {
      "label": "Start Backend & Expo (Both)",
      "dependsOn": [
        "Start Backend Server",
        "Start Expo App"
      ],
      "dependsOrder": "parallel",
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "group": "both"
      }
    },
    {
      "label": "Build Backend",
      "type": "npm",
      "script": "build",
      "problemMatcher": ["$tsc"],
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    }
  ]
}
